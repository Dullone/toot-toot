<div class="row">
  <div class="toot-container">
    
    <div class="toot-top-info">
      <span class="name"><%= link_to user.username, user_toots_path(user) %> </span>
      <span class="username">@<%= user.username %></span> - 
      <span class="time-ago"  >
        <% if Time.now - toot.created_at < 1.days  %>
          <%= time_tag toot.created_at, class: "timeago" %>
        <% else %>
          <%= date_distance_in_words_short toot.created_at %>
        <% end %>
      </span>
    </div>

    <div class="toot-text"><%= toot.message %></div>

    <div class="toot-bottom-bar">
      reply 
      <% unless hasCurrentUserRetooted? toot.id  %>
        <%= link_to "retoot", "javascript:void(0)", class: "retoot-toot", "data-tootid": toot.id %>
      <% else %>
        <span class="retooted">&#8635;</span>
      <% end %>
      fav
      <% if toot.user_id == current_user.id %>
        <%= link_to "delete", user_toot_path(current_user, toot.id), 
                              class: "delete-toot"  %> 
      <% end %>
    </div>

  </div>
</div>
