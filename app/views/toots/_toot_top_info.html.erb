<div class="toot-top-info">
  <span class="name"><%= link_to toot.user.username, user_toots_path(toot.user) %> </span>
  <span class="username">@<%= toot.user.username %></span> - 
  <span class="time-ago"  title='<%=toot.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%r %Z %F")%>' >
    <% if Time.now - toot.created_at < 1.days  %>
      <%= time_tag toot.created_at, class: "timeago" %>
    <% else %>
      <%= date_distance_in_words_short toot.created_at %>
    <% end %>
  </span>
</div>