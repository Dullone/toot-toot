<% options = { show_all_replies: false, 
                 render_replies_as_single: false, 
                 show_replies: true } %>
$("#toots-container").append('<%=j render toots, locals: { options: options } %>');
<% if @toots.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @toots %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>